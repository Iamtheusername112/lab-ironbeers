<h1>Random Beer</h1>
{{!-- {{> navbar}} --}}
<div>
  <img src='{{beer.image_url}}' alt='{{beer.name}}' />
  <h2>{{beer.name}}</h2>
  <p>{{beer.description}}</p>
  <p>{{beer.tagline}}</p>
  <h3>Food Pairing:</h3>
  <ul>
    {{#each beer.food_pairing}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
  <h3>Brewer Tips:</h3>
  <p>{{beer.brewers_tips}}</p>

</div>
